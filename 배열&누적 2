#include <iostream>

int main() 
{
  int score[4];
  int sum = 0;

  printf("국어 점수 :");
  scanf("%d", &score[0]);
  printf("영어 점수 :");
  scanf("%d", &score[1]);
  printf("수학 점수 :");
  scanf("%d", &score[2]);
  printf("과학 점수 :");
  scanf("%d", &score[3]);

  for(int i = 0; i<=3; i++)
    {
      sum = sum+score[i];
    }
  printf("\n 점수 합계 = %d", sum);
   sum = sum/4;
  printf("\n 평균 점수 = %d", sum);
  return 0;
  }
